# Environment Configuration for MalPay Backend
# Copy this file to .env and fill in the actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Railway PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=malpay
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_URL=postgresql://postgres:password@localhost:5432/malpay

# Redis Configuration (Railway Redis)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Service Configuration
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@malpay.com
EMAIL_FROM_NAME=MalPay

# Payment Gateway Configuration
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key

# Blockchain Configuration
TRON_API_KEY=your-tron-api-key
TRON_NETWORK=mainnet
TRON_USDT_CONTRACT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

POLYGON_API_KEY=your-polygon-api-key
POLYGON_NETWORK=mainnet
POLYGON_USDT_CONTRACT_ADDRESS=0xc2132D05D31c914a87C6611C10748AEb04B58e8F

ETHEREUM_API_KEY=your-ethereum-api-key
ETHEREUM_NETWORK=mainnet
ETHEREUM_USDT_CONTRACT_ADDRESS=0xdAC17F958D2ee523a2206206994597C13D831ec7

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
CORS_CREDENTIALS=true

# Admin Configuration
ADMIN_EMAIL=admin@malpay.com
ADMIN_PASSWORD=admin123

# Feature Flags
ENABLE_2FA=true
ENABLE_KYC=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# External Services
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# Monitoring
ENABLE_MONITORING=true
MONITORING_ENDPOINT=https://monitoring.malpay.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
